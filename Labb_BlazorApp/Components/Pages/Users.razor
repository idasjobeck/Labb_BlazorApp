@page "/users"
@rendermode InteractiveServer
@attribute [StreamRendering]
@using System.ComponentModel.DataAnnotations;

<PageTitle>Users</PageTitle>

<span><h3>Users</h3></span>

@if (_users == null)
{
    <p><em>Loading...</em></p>
    <img src="/resources/giphy_duck.gif" width="100" height="100"/>
}
else
{
    <div class="clearfix">
        <div class="float-end mb-5">
            <label for="dataSource">Currently showing data from</label>
            <select name="dataSource" id="dataSource" class="form-select-sm" @onchange=" DataSourceIsChanged">
                <option value="api" selected>API</option>
                <option value="memory">Memory</option>
            </select>
        </div>
    </div>

    <div class="clearfix">
        <div class="mb-3">
            <label for="inputGroupSelect01">Select search criteria: </label>
            <select class="form-select-sm" id="inputGroupSelect01" @onchange="SearchCriteriaIsChanged">
                <option value="none" selected>Please select</option>
                <option value="userId">User ID</option>
                <option value="firstName">First name</option>
                <option value="lastName">Last name</option>
                <option value="email">Email address</option>
                <option value="company">Company name</option>
            </select>

            <input type="text" placeholder="search term" aria-label="search term" aria-describedby="button-addon2" @bind=_searchTerm>
            <button type="button" id="button-addon2" class="button-padding" disabled=@_searchDisabled @onclick=SearchUsers>Search</button>

            <button class="float-end button-margin button-padding" @onclick="@(() => FilterUsers(NumberOfItemsToDisplay.DisplayAll))">Show all</button>
            <button class="float-end button-margin button-padding" @onclick="@(() => FilterUsers(NumberOfItemsToDisplay.Display10))">Show 10</button>
            <button class="float-end button-margin button-padding" @onclick="@(() => FilterUsers(NumberOfItemsToDisplay.Display05))">Show 5</button>
        </div>

    </div>

    <p class="right-aligned">Showing @UsersToDisplay?.Count of @_users.Count users.</p>

    <table class="table">
        <thead>
        <tr>
            <th class="sortable" @onclick="@(() => SortUsers(SortByAttribute.UserId, true))">User ID &uarr;&darr;</th>
            <th class="sortable" @onclick="@(() => SortUsers(SortByAttribute.FirstName, true))">First name &uarr;&darr;</th>
            <th class="sortable" @onclick="@(() => SortUsers(SortByAttribute.LastName, true))">Last name &uarr;&darr;</th>
            <th class="sortable" @onclick="@(() => SortUsers(SortByAttribute.Email, true))">Email address &uarr;&darr;</th>
            <th>Phone number</th>
            <th>Website</th>
            <th>Street</th>
            <th>City</th>
            <th>Zip Code</th>
            <th class="sortable" @onclick="@(() => SortUsers(SortByAttribute.Company, true))">Company name &uarr;&darr;</th>
            <th>Catchphrase</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var user in UsersToDisplay)
        {
            <tr>
                <td>@user.UserId</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>@user.Website</td>
                <td>@user.Address.Street</td>
                <td>@user.Address.City</td>
                <td>@user.Address.ZipCode</td>
                <td>@user.Company.CompanyName</td>
                <td>@user.Company.Catchphrase</td>
            </tr>
        }
        </tbody>
    </table>
    <p></p>
    <p class="right-aligned">Showing @UsersToDisplay?.Count of @_users.Count users.</p>
}